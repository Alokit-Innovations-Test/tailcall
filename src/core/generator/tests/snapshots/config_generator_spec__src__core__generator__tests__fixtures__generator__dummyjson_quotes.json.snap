schema @server @upstream(baseURL: "https://dummyjson.com") {
  query: Query
}

type Query {
  quote(p1: Int!): RandomQuote @http(path: "/quotes/{{.args.p1}}")
  quoteList: QuoteList @http(path: "/quotes")
  randomQuotes(p1: Int!): [RandomQuote] @http(path: "/quotes/random/{{.args.p1}}")
}

type QuoteList {
  limit: Int
  quotes: [RandomQuote]
