  body: String
  id: Int
  title: String
  user: User
    @http(
      batchKey: ["id"]
      path: "/users"
      query: [{key: "id", value: "{{.value.userId}}"}, {key: "foo", value: "bar"}]
      batch: {delay: 10, headers: []}
