schema @server(batchRequests: true) @upstream {
  query: Query
}

type Query {
  user(id: Int!): User
    @http(
      baseURL: "http://jsonplaceholder.typicode.com"
      batchKey: ["id"]
      path: "/users"
      query: [{key: "id", value: "{{.args.id}}"}]
      batch: {delay: 1, headers: [], maxSize: 100}
    )
}

type User {
  id: Int
  name: String
}
